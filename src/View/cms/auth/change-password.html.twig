{% extends 'cms/layout/blank.html.twig' %}

{% block title %}{{ Translation.of('Change password', 'cms/auth') }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div style="margin-top:150px;">
                    <div class="text-center">
                        <h2>@{{ user.name }}</h2>
                    </div>
                    <br>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">{{ Translation.of('Change password', 'cms/auth') }}</h3>
                        </div>
                        <div class="panel-body">
                            {% if alert is not empty %}
                                <div class="alert alert-success alert-dismissible" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="fa fa-times"></i></span></button>
                                    <div>{{ alert|raw }}</div>
                                </div>
                            {% endif %}
                            <form accept-charset="UTF-8" role="form" method="post">
                                {{ Csrf|raw }}
                                <fieldset>
                                    <div class="form-group{{ attribute(errors, 'old_password') is defined ? ' has-error' : '' }}">
                                        <div class="input-group">
                                            <div class="input-group-addon"><span class="fa fa-clock-o"></span></div>
                                            <input class="form-control" placeholder="{{ Translation.of('Old password', 'cms/auth') }}" name="old_password" type="password" value="{{ attribute(old, 'old_password') is defined ? attribute(old, 'old_password') : '' }}" required>
                                        </div>
                                        {% if attribute(errors, 'old_password') is defined %} <p class="help-block">{{ attribute(errors, 'old_password') }}</p>{% endif %}
                                    </div>
                                    <div class="form-group{{ attribute(errors, 'password') is defined ? ' has-error' : '' }}">
                                        <div class="input-group">
                                            <div class="input-group-addon"><span class="fa fa-key"></span></div>
                                            <input class="form-control" placeholder="{{ Translation.of('Password', 'cms/auth') }}" name="password" type="password" value="{{ attribute(old, 'password') is defined ? attribute(old, 'password') : '' }}" required>
                                        </div>
                                        {% if attribute(errors, 'password') is defined %} <p class="help-block">{{ attribute(errors, 'password') }}</p>{% endif %}
                                    </div>
                                    <div class="form-group{{ attribute(errors, 'confirm_password') is defined ? ' has-error' : '' }}">
                                        <div class="input-group">
                                            <div class="input-group-addon"><span class="fa fa-check-square-o"></span></div>
                                            <input class="form-control" placeholder="{{ Translation.of('Confirm password', 'cms/auth') }}" name="confirm_password" type="password" value="{{ attribute(old, 'confirm_password') is defined ? attribute(old, 'confirm_password') : '' }}" required>
                                        </div>
                                        {% if attribute(errors, 'confirm_password') is defined %} <p class="help-block">{{ attribute(errors, 'confirm_password') }}</p>{% endif %}
                                    </div>
                                    <input class="btn btn-success btn-block" type="submit" value="{{ Translation.of('Save', 'cms/auth') }}">
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}