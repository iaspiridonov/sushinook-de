<div>
    {{ form.open()|raw }}
    <div class="form-group row">
        <div class="col-sm-12">
            <input type="checkbox" id="reload-after-save"><label for="reload-after-save">&nbsp;&nbsp;обновить страницу после сохранения</label>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-success"><i class="fa fa-fw fa-save"></i> {{ Translation.of('Save', 'cms/settings') }}</button>
        </div>
    </div>
    {{ form.close()|raw }}
</div>
