  </div>
</div>



  <!-- mobile -->
  <div class="m_fixed">
    <div class="mob_result_box"></div>
    <div class="halves-sides">
        <div class="halves-side left">
          <div class="in">
            <div class="text text--gray" data-output="placeholder-left">Левая половинка</div>
            <div class="text text--gray" data-output="description-left" style="display: none;"></div>
          </div>
        </div>
        <div class="halves-side right">
          <div class="in">
            <div class="text text--gray" data-output="placeholder-right">Правая половинка</div>
