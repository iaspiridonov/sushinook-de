{% extends 'src/layout.html.twig' %}

{% block content %}
<div class="page"><!-- page content -->
    {% include 'src/common/breadcrumbs.html.twig' %}
    {% set about = page.about %}
    <h1>О компании</h1>
	<section class="about"><!-- main about -->
		<div class="container">
			<div class="about__block">
				<div class="left">
					<h3 class="blue">{{ about.text1|nl2br }}</h3>
					{{ about.text3|raw }}
					<h5 class="blue">{{ about.text4 }}</h5>
					<a href="/{{ lang }}/about/" class="btn">Подробнее о компании</a>
				</div>
				<div class="right">
					<div class="about--txt radius wow fadeIn" data-wow-offset="0" data-wow-delay="0.4s">
						<p>{{ about.text5 }}</p>
					</div>
				</div>
			</div>
			<div class="advantages radius">
				<div class="advantages__item wow fadeInUp" data-wow-offset="0" data-wow-delay="0.2s">
					<h5>{{ about.text6 }} <span>{{ about.text7 }}</span></h5>
					<img src="/img/img-19.png" alt="img-19">
				</div>
				<div class="advantages__item wow fadeInUp" data-wow-offset="0" data-wow-delay="0.3s">
					<h5>{{ about.text8 }} <span>{{ about.text9 }}</span></h5>
					<img src="/img/img-20.png" alt="img-20">
				</div>
				<div class="advantages__item wow fadeInUp" data-wow-offset="0" data-wow-delay="0.4s">
					<h5>{{ about.text10 }}<span>{{ about.text11 }}</span></h5>
					<img src="/img/img-21.png" alt="img-21">
				</div>
			</div>
		</div>
		<img src="/img/img-17.png" alt="imh-17" class="first">
		<img src="{{ about.image }}" alt="imh-18" class="second">
    </section><!-- main about -->
    <div class="bg--gray">
        <div class="container">
            <div class="block">
                <div class="left">
                    <h3>{{ page.text1|nl2br }}</h3>
                </div>
                <div class="right"><img src="/img/img-42.png" alt="img-42"></div>
            </div>
            <div class="about__item">
                <h3>{{ page.text2|nl2br }}</h3>
                <div class="row">
                    <div class="left">
                        <p>{{ page.text3|nl2br }}</p>
                    </div>
                    <div class="right">
                        <p>{{ page.text4|nl2br }}</p>
                    </div>
                </div>
            </div>
            <div class="about__item">
                <h3>{{ page.text5|nl2br }}</h3>
                <div class="row">
                    <div class="left">
                        <p>{{ page.text6|nl2br }}</p>
                    </div>
                    <div class="right">
                        <h3>{{ page.text7|nl2br }}</h3>
                    </div>
                </div>
            </div>
            <div class="about__slogan radius">
                <h3>{{ page.text8|nl2br }}</h3>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="obligation">
            <div class="left">
                <div class="obligation__item radius">
                    <span>{{ page.text9|nl2br }}</span>
                    <h5>{{ page.text10|nl2br }}</h5>
                </div>
                <div class="obligation__item radius">
                    <span>{{ page.text11|nl2br }}</span>
                    <h5>{{ page.text12|nl2br }}</h5>
                </div>
                <div class="obligation__item radius">
                    <span>{{ page.text13|nl2br }}</span>
                    <h5>{{ page.text14|nl2br }}</h5>
                </div>
            </div>
            <div class="right">
                <h3>{{ page.text15|nl2br }}</h3>
                <p>{{ page.text16|nl2br }}</p>
            </div>
        </div>
    </div>
    <div class="about--img"><img src="{{ page.image }}" alt="img-34.jpg"></div>
    <div class="container">
        <div class="about--img__block">
            <div class="left">
                <img src="/img/img-42.png" alt="img-42">
                <span class="about--title radius">{{ page.text17|nl2br }}</span>
            </div>
            <div class="right">
                {{ page.text18|raw }}
            </div>
        </div>
        <h3 class="about--h3">{{ page.text19|nl2br }}</h3>
    </div>
</div><!-- page content -->	
{% endblock %}