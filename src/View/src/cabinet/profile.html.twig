<div role="tabpanel" class="tab-pane fade {{ orderPage == false ? 'active in' : '' }}" id="cabinet-tab-1">
  <!-- form-profile -->
  <div class="form--profile" data-form="profile">
    <form method="POST" class="userDataForm">
      <fieldset>
        <div class="form-title">
          <h3 class="title-3">Контактная информация</h3>
        </div>
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
              <label class="control-label">Name<sup>*</sup></label>
              <div class="controls">
                <input type="text" class="form-control" name="name" required value="{{ account.name }}" />
              </div>
            </div>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
              <label class="control-label">День рождения<sup>*</sup></label>
              <div class="controls">
                <input type="text" class="form-control" required="required" name="date" data-inputmask data-inputmask-alias="datetime" data-inputmask-inputformat="dd / mm / yyyy" inputmode="numeric" placeholder="дд / мм / гггг" value="{{ account.date is not empty ? account.date|date("d / m / Y") : '' }}" />
              </div>
            </div>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
              <label class="control-label">E-mail<sup>*</sup></label>
              <div class="controls">
                <input type="email" class="form-control" name="email" required value="{{ account.email }}" />
              </div>
            </div>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-group">
              <label class="control-label">Handy<sup>*</sup></label>
              <div class="controls">
                <input type="tel" class="form-control" name="phone" value="{{ account.phone }}" data-inputmask="'alias':'phone', 'mask':'+49 9999999999[9]'" placeholder="+49 " required />
              </div>
            </div>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <div class="form-title">
          <h3 class="title-3">Адреса доставки</h3>
        </div>
        <div class="row">
          <div class="col-lg-9 col-md-9 col-sm-9">
            <div class="form-group">
              <label class="control-label">Улица</label>
              <div class="controls">
                <input type="text" autocomplete="nope" class="form-control" id="find_street" street-search="true" name="street" value="{{ account.street }}" required />
                <ul class="suggestions"></ul>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-3 col-xs-4">
            <div class="form-group">
              <label class="control-label">Дом</label>
              <div class="controls">
                <input type="text" class="form-control" name="house" value="{{ account.house }}" />
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-6 col-xs-8">
            <div class="form-group">
              <label class="control-label">Квартира / Офис</label>
              <div class="controls">
                <input type="text" class="form-control" name="flat" value="{{ account.flat }}" />
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-3 col-xs-4">
            <div class="form-group">
              <label class="control-label">Этаж</label>
              <div class="controls">
                <input type="text" class="form-control" name="level" value="{{ account.level }}" />
              </div>
            </div>
          </div>
        </div>
      </fieldset>
      <div class="form-controls">
        <button type="submit" class="btn btn--default btn--block btn--submit">
          <span>Сохранить изменения</span>
        </button>
      </div>
    </form>
  </div><!-- /form-profile -->
</div>