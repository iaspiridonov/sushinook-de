{% extends 'src/layout.html.twig' %}

{% block content %}
<!-- .content -->
<main class="content">
  <!-- breadcrumbs -->
  <div class="breadcrumbs">
    <div class="container">
      <ul class="list--inline">
        <li>
          <a href="/{{ lang }}/">{{ Translation.of('Main') }}</a> <i class="icon fa fa-chevron-right"></i>
        </li>
        <li>{{ page.title }}</li>
      </ul>
    </div>
  </div><!-- /breadcrumbs -->
  <!-- section-text -->
  <section class="section s--text" data-role="text">
    <div class="container">
      <div class="s-title text-title">
        <h1 class="title-1">{{ page.title }}</h1>
      </div>
      <div class="s-content text-content">
        {{ page.body|raw }}
      </div>
    </div>
  </section><!-- /section-text -->
</main><!-- /.content -->
{% endblock %}